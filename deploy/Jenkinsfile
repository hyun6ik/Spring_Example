pipeline {
    agent any

    stages {

        stage('CheckOut') {
            steps {
                echo 'checkout backend...'
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/hyun6ik/Spring_Example.git']]])
            }
        }

        stage('Build And Test') {
            steps {
                echo 'build backend....'

                dir('./') {
                    sh '''
                        chmod +x ./gradlew
                        ./gradlew clean build
                    '''
                }
            }
        }

    }
}